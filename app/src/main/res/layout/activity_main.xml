<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="10"
            android:hint="@string/enter_a_number"
            android:textSize="25sp"
            android:layout_gravity="top" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_weight="1.5"
            android:layout_gravity="top|left|bottom|right"
            android:gravity="fill_horizontal|start|fill_vertical|end">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="0"
                android:layout_gravity="top|left|bottom|right"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_1"
                    android:id="@+id/btn1"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_2"
                    android:id="@+id/btn2"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_3"
                    android:id="@+id/btn3"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_4"
                    android:id="@+id/btn4"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_5"
                    android:id="@+id/btn5"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_6"
                    android:id="@+id/btn6"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_7"
                    android:id="@+id/btn7"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_8"
                    android:id="@+id/btn8"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_9"
                    android:id="@+id/btn9"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_0"
                    android:id="@+id/btn0"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/_dot"
                    android:id="@+id/dot"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/ce"
                    android:id="@+id/Ce"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/add"
                    android:id="@+id/add"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/minus"
                    android:id="@+id/subt"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/mult"
                    android:id="@+id/mult"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/c"
                    android:id="@+id/C"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/divide"
                    android:id="@+id/div"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/pow"
                    android:id="@+id/exp"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/sqrt"
                    android:id="@+id/sqrt"
                    android:textSize="25sp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.13">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/perce"
                    android:id="@+id/perc"
                    android:textSize="25sp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/equals"
                    android:id="@+id/equals"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/cuberoot"
                    android:id="@+id/Croot"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="2" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/created_by_aniruddh_shukla"
        android:textSize="16sp" />
</RelativeLayout>
